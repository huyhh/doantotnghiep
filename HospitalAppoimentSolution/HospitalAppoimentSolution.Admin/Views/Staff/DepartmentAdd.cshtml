@model HospitalAppoimentSolution.Data.ViewModels.DepartmentActionView
@{
    ViewBag.Title = "DepartmentAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content container-fluid">

    <!-- Page Header -->
    <div class="page-header">
        <div class="row">
            <div class="col">
                <h3 class="page-title">Thêm mới phòng ban</h3>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                    <li class="breadcrumb-item active">Thêm mới</li>
                </ul>
            </div>
        </div>
    </div>
    <!-- /Page Header -->

    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Thêm mới</h4>
                </div>
                <div class="card-body">

                    @using (Html.BeginForm("DepartmentAdd", "Staff", FormMethod.Post))
                    {
                        <div class="form-group">
                            <label class="form-label" for="field-1">Tên</label>
                            <span class="desc"></span>
                            <div class="controls">
                                @Html.TextBoxFor(model => model.Title, new { @class = "form-control", @placeholder = "Name" })
                                @Html.ValidationMessageFor(model => model.Title)
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="form-label" for="field-1">SĐT</label>
                            <span class="desc"></span>
                            <div class="controls">
                                @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", @placeholder = "SĐT" })
                                @Html.ValidationMessageFor(model => model.Phone)
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="field-1">Mail</label>
                            <span class="desc"></span>
                            <div class="controls">
                                @Html.TextBoxFor(model => model.Mail, new { @class = "form-control", @placeholder = "Mail" })
                                @Html.ValidationMessageFor(model => model.Mail)
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="form-label" for="field-1">Mô tả</label>
                            <span class="desc"></span>
                            <div class="controls">
                                @Html.TextAreaFor(model => model.Desc, new { @class = "form-control", @placeholder = "Mô tả" })
                                @Html.ValidationMessageFor(model => model.Desc)
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="field-5">Loại</label>
                            <span class="desc"></span>
                            <select name="IsMedicalExam" id="IsMedicalExam" class="form-control">
                                <option selected value="true">Phòng ban khám chữa bệnh</option>
                                <option value="false">Phòng ban khác</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="field-5">Trạng thái</label>
                            <span class="desc"></span>
                            <select name="Status" id="Status" class="form-control">
                                <option selected value="true">Hiện</option>
                                <option value="false">Ẩn</option>
                            </select>
                        </div>

                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 padding-bottom-30">
                            <div class="text-left">
                                <button type="submit" class="btn btn-primary">Lưu</button>
                                <button type="button" class="btn">Hủy</button>
                            </div>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>

</div>