<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <meta charset="utf-8" />
    <title>BACH DANG HOSPITAL</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <link rel="shortcut icon" type="image/x-icon" href="/Content/img/favicon.png">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/Content/css/bootstrap.min.css">

    <!-- Fontawesome CSS -->
    <link rel="stylesheet" href="/Content/css/font-awesome.min.css">

    <!-- Feathericon CSS -->
    <link rel="stylesheet" href="/Content/css/feathericon.min.css">

    <link rel="stylesheet" href="/Content/plugins/morris/morris.css">
    <link rel="stylesheet" href="/Content/plugins/datatables/datatables.min.css">
    <link rel="stylesheet" href="~/Content/css/jquery-confirm.min.css">
    <!-- Main CSS -->
    <link rel="stylesheet" href="/Content/css/style.css">


    <script src="/Content/js/jquery-3.2.1.min.js"></script>
    <script src="~/Content/ckeditor/ckeditor.js"></script>
    <script src="~/Content/ckfinder/ckfinder.js"></script>
</head>
<body>


    <div class="main-wrapper">

        <!-- Header -->
        <div class="header">

            <!-- Logo -->
            <div class="header-left">
                <a href="/" class="logo">
                    <img src="/Content/img/logo.png" alt="Logo">
                </a>
                <a href="/" class="logo logo-small">
                    <img src="/Content/img/logo-small.png" alt="Logo" width="30" height="30">
                </a>
            </div>
            <!-- /Logo -->

            <a href="javascript:void(0);" id="toggle_btn">
                <i class="fe fe-text-align-left"></i>
            </a>

            <div class="top-nav-search">
                <form>
                    <input type="text" class="form-control" placeholder="Search here">
                    <button class="btn" type="submit"><i class="fa fa-search"></i></button>
                </form>
            </div>

            <!-- Mobile Menu Toggle -->
            <a class="mobile_btn" id="mobile_btn">
                <i class="fa fa-bars"></i>
            </a>
            <!-- /Mobile Menu Toggle -->
            <!-- Header Right Menu -->
            <ul class="nav user-menu">

                <!-- Notifications -->
                <!-- User Menu -->
                @Html.Action("WidgetLogin", "System")
                <!-- /User Menu -->

            </ul>
            <!-- /Header Right Menu -->

        </div>
        <!-- /Header -->
        <!-- Sidebar -->
        <div class="sidebar" id="sidebar">
            <div class="sidebar-inner slimscroll">
                <div id="sidebar-menu" class="sidebar-menu">
                    <ul>
                        <li class="menu-title">
                            <span>Main</span>
                        </li>
                        <li class="active">
                            <a href="/"><i class="fe fe-home"></i> <span>Dashboard</span></a>
                        </li>
                        <li class="submenu">
                            <a href="#"><i class="fe fe-document"></i> <span> Nhân viên</span> <span class="menu-arrow"></span></a>
                            <ul style="display: none;">
                                <li><a href="/Staff/List">Danh sách</a></li>
                                <li><a href="/Staff/Department">Phòng ban</a></li>
                                <li><a href="/Staff/Position">Chức vụ</a></li>
                            </ul>
                        </li>
                        <li>
                            <a href="/Promotion/List"><i class="fe fe-gift"></i> <span>Khuyến mãi</span></a>
                        </li>
                        <li>
                            <a href="/Appointment/List"><i class="fe fe-layout"></i> <span>Lịch hẹn</span></a>
                        </li>
                        <li>
                            <a href="/News/List"><i class="fe fe-paper-plane"></i> <span>Tin tức</span></a>
                        </li>
                        <li class="submenu">
                            <a href="#"><i class="fe fe-user-plus"></i> <span> Bác sĩ</span> <span class="menu-arrow"></span></a>
                            <ul style="display: none;">
                                <li><a href="/Doctor/List">Danh sách</a></li>
                                <li><a href="/ShiftTime/List">Ca làm việc</a></li>
                            </ul>
                        </li>
                        <li>
                            <a href="/Patient/List"><i class="fe fe-user"></i> <span>Bệnh nhân</span></a>
                        </li>
                        
                    </ul>
                </div>
            </div>
        </div>
        <!-- /Sidebar -->
        <!-- Page Wrapper -->
        <div class="page-wrapper">
            @RenderBody()
        </div>
        <!-- /Page Wrapper -->

    </div>


    <!-- Bootstrap Core JS -->
    <script src="/Content/js/popper.min.js"></script>
    <script src="/Content/js/bootstrap.min.js"></script>
    <script src="/Content/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="/Content/plugins/datatables/datatables.min.js"></script>
    <!-- Slimscroll JS -->
    <script src="/Content/plugins/slimscroll/jquery.slimscroll.min.js"></script>

    <script src="/Content/plugins/raphael/raphael.min.js"></script>
    <script src="/Content/plugins/morris/morris.min.js"></script>

    <script src="/Content/js/chart.morris.js"></script>
    <script src="/Content/js/jquery.maskedinput.min.js"></script>
    <script src="~/Content/js/jquery-confirm.min.js"></script>
    <script src="/Content/js/mask.js"></script>
    <script src="/Content/plugins/select2/select2.min.js" type="text/javascript"></script>
    <link href="/Content/plugins/select2/select2.css" rel="stylesheet" type="text/css" media="screen" />
    <link href="~/Content/css/gijgo.min.css" rel="stylesheet" type="text/css" media="screen" />
    <script src="~/Content/js/gijgo.min.js" type="text/javascript"></script>

    <!-- Custom JS -->
    <script src="/Content/js/script.js"></script>
</body>
</html>
