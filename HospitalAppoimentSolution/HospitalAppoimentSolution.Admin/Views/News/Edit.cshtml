@model HospitalAppoimentSolution.Data.ViewModels.NewsAction
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="content container-fluid">

        <!-- Page Header -->
        <div class="page-header">
            <div class="row">
                <div class="col">
                    <h3 class="page-title">Chỉnh sửa tin tức</h3>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                        <li class="breadcrumb-item active">Chỉnh sửa </li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- /Page Header -->

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Chỉnh sửa </h4>
                    </div>
                    <div class="card-body">

                        @using (Html.BeginForm("Edit", "News", FormMethod.Post))
                        {
                            <div class="form-group">
                                <label class="form-label" for="field-1">Tên</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.Title, new { @class = "form-control", @placeholder = "Name" })
                                    @Html.ValidationMessageFor(model => model.Title)
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="form-label" for="field-1">Mô tả</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    @Html.TextAreaFor(model => model.Desc, new { @class = "form-control", @placeholder = "Desc" })
                                    @Html.ValidationMessageFor(model => model.Desc)
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="form-label" for="field-5">Trạng thái</label>
                                <span class="desc"></span>
                                <select name="Status" id="Status" class="form-control">
                                    <option selected value="true">Hiện</option>
                                    <option value="false">Ẩn</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label class="form-label" for="field-1">Hình ảnh</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    <img src="@Model.Avatar" id="reviewImg" style="width:150px;height:auto;cursor:pointer" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.Avatar, new { @class = "form-control", @placeholder = "..." })
                                </div>
                                <script type="text/javascript">
                                    $('#reviewImg').click(function () {
                                        var finder = new CKFinder();
                                        finder.selectActionFunction = function (fileUrl) {
                                            $('#Avatar').val(fileUrl);
                                            $('#reviewImg').attr("src", fileUrl);
                                        };
                                        finder.popup();
                                    });
                                </script>
                            </div>
                            <div class="form-group">
                                <label class="form-label" for="field-6">Bài viết</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    @Html.TextAreaFor(model => model.Content, new { @class = "form-control autogrow", @placeholder = "Content" })

                                    <script type="text/javascript">
                                        CKEDITOR.replace("Content");
                                    </script>
                                    @Html.ValidationMessageFor(model => model.Content)
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="form-label" for="field-1">Meta Title</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.MetaTitle, new { @class = "form-control", @placeholder = "Meta Title" })
                                    @Html.ValidationMessageFor(model => model.MetaTitle)
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="form-label" for="field-1">Meta Desc</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.MetaTitle, new { @class = "form-control", @placeholder = "Meta Desc" })
                                    @Html.ValidationMessageFor(model => model.MetaDesc)
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="form-label" for="field-1">Meta Keyword</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.MetaKeyword, new { @class = "form-control", @placeholder = "Meta Keyword" })
                                    @Html.ValidationMessageFor(model => model.MetaKeyword)
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 padding-bottom-30">
                                <div class="text-left">
                                    <button type="submit" class="btn btn-primary">Lưu</button>
                                    <button type="button" class="btn">Hủy</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>

            </div>
        </div>

    </div>

