@model HospitalAppoimentSolution.Data.ViewModels.DoctorView
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content container-fluid">

    <!-- Page Header -->
    <div class="page-header">
        <div class="row">
            <div class="col">
                <h3 class="page-title">Thêm mới bác sĩ</h3>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                    <li class="breadcrumb-item active">Thêm mới</li>
                </ul>
            </div>
        </div>
    </div>
    <!-- /Page Header -->

    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Thêm mới</h4>
                </div>
                <div class="card-body">

                    @using (Html.BeginForm("Edit", "Doctor", FormMethod.Post))
                    {
                        <div class="form-group">
                            <label class="form-label" for="field-1">Phòng ban</label>
                            <span class="desc"></span>
                            <div class="controls">
                                @Html.DropDownListFor(model => model.Department, new SelectList(ViewBag.DepartmentLst, "ID", "Title", "....Select...."), new { @class = "form-control", @placeholder = "Product Category" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="field-1">Tên</label>
                            <span class="desc"></span>
                            <div class="controls">
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = "Name" })
                                @Html.ValidationMessageFor(model => model.Name)
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="field-1">Địa chỉ</label>
                            <span class="desc"></span>
                            <div class="controls">
                                @Html.TextBoxFor(model => model.Address, new { @class = "form-control", @placeholder = "Địa chỉ" })
                                @Html.ValidationMessageFor(model => model.Address)
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="field-1">SĐT</label>
                            <span class="desc"></span>
                            <div class="controls">
                                @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", @placeholder = "SĐt" })
                                @Html.ValidationMessageFor(model => model.Phone)
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="field-1">Email</label>
                            <span class="desc"></span>
                            <div class="controls">
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Email" })
                                @Html.ValidationMessageFor(model => model.Email)
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="field-1">Giá</label>
                            <span class="desc"></span>
                            <div class="controls">
                                @Html.TextBoxFor(model => model.Price, new { @class = "form-control", @placeholder = "Giá theo giờ" })
                                @Html.ValidationMessageFor(model => model.Price)
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="field-1">Ngày sinh</label>
                            <span class="desc"></span>
                            <div class="controls">
                                <div class="controls">
                                    <input type="text" name="BirthDay" id="BirthDay" readonly class="form-control datepicker" data-format="dd/mm/yyyy" value="@String.Format("{0:dd/MM/yyyy}",Model.BirthDay)">
                                </div>
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="form-label" for="field-1">Hình ảnh</label>
                            <span class="desc"></span>
                            <div class="controls">
                                <img src="@Model.Avatar" id="reviewImg" style="width:150px;height:auto;cursor:pointer" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="controls">
                                @Html.TextBoxFor(model => model.Avatar, new { @class = "form-control", @placeholder = "..." })
                            </div>
                            <script type="text/javascript">
                                    $('#reviewImg').click(function () {
                                        var finder = new CKFinder();
                                        finder.selectActionFunction = function (fileUrl) {
                                            $('#Avatar').val(fileUrl);
                                            $('#reviewImg').attr("src", fileUrl);
                                        };
                                        finder.popup();
                                    });
                            </script>
                        </div>

                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 padding-bottom-30">
                            <div class="text-left">
                                <button type="submit" class="btn btn-primary">Lưu</button>
                                <button type="button" class="btn">Hủy</button>
                            </div>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>

</div>

