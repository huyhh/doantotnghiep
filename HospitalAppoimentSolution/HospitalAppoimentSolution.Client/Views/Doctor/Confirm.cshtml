@model HospitalAppoimentSolution.Data.ViewModels.AppoinmentView
@{
    ViewBag.Title = "Confirm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="content success-page-cont" style="min-height: 490px;">
        <div class="container-fluid">

            <div class="row justify-content-center">
                <div class="col-lg-6">

                    <!-- Success Card -->
                    <div class="card success-card">
                        <div class="card-body">
                            <div class="success-cont">
                                @if (ViewBag.StatusPayment != null)
                                {
                                    if ((bool)ViewBag.StatusPayment)
                                    {
                                        <i class="fas fa-check"></i>
                                        <h3>Thanh toán thành công</h3>
                                        <p>Mã: @Model.Code <strong>Bs: @Model.DoctorName</strong><br> thời gian <strong>@Model.Date - @Model.Time</strong></p>
                                        <a href="/thong-tin-tai-khoan.html" class="btn btn-primary view-inv-btn">Tài khoản</a>
                                    }
                                    else
                                    {
                                        <i class="fas fa-remove-format"></i>
                                        <h3>Thanh toán thất bại</h3>
                                        <p>Mã: @Model.Code <strong>Bs: @Model.DoctorName</strong><br> thời gian <strong>@Model.Date - @Model.Time</strong></p>
                                        <a href="/thong-tin-tai-khoan.html" class="btn btn-primary view-inv-btn">Tài khoản</a>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                    <!-- /Success Card -->

                </div>
            </div>

        </div>
    </div>

