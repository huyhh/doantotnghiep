@model HospitalAppoimentSolution.Data.ViewModels.PatientView
@if (Model != null && Model.ID != 0)
{
    <li class="nav-item">
        <a class="nav-link" href="/thong-tin-tai-khoan.html"><i class="fa fa-user"></i>&nbsp; @Model.Name </a>
    </li>
    <li class="nav-item">
        <a class="nav-link header-login" href="" onclick="logOut()">Đăng xuất </a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link header-login" href="/dang-ky.html">Đăng ký </a>
    </li>
    <li class="nav-item">
        <a class="nav-link header-login" href="/dang-nhap.html">Đăng nhập </a>
    </li>
}
<script>
    function logOut() {
        $.ajax({
            url: "/Patient/Logout",
            type: "POST",
            traditional: true,
            datatype: "json",
            contentType: 'application/json; charset=utf-8',
            success: function (result) {
                //alert(result);
                location.href = "/";
            },
            error: function () {
                return false;
            }
        });
    }
</script>