@model HospitalAppoimentSolution.Data.ViewModels.PatientView
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-md-8 offset-md-2">

                <!-- Register Content -->
                <div class="account-content">
                    <div class="row align-items-center justify-content-center">
                        <div class="col-md-7 col-lg-6 login-left">
                            <img src="/Content/img/login-banner.png" class="img-fluid" alt="Doccure Register">
                        </div>
                        <div class="col-md-12 col-lg-6 login-right">
                            <div class="login-header">
                                <h3>Cập nhật thông tin</h3>
                            </div>

                            <!-- Register Form -->
                            @using (Html.BeginForm("InfoChange", "Patient", FormMethod.Post))
                            {
                                <div class="form-group form-focus">
                                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control floating" })
                                    @Html.ValidationMessageFor(model => model.Name)
                                    <label class="focus-label">Họ tên</label>
                                </div>
                                <div class="form-group form-focus">
                                    @Html.TextBoxFor(model => model.Address, new { @class = "form-control floating" })
                                    @Html.ValidationMessageFor(model => model.Address)
                                    <label class="focus-label">Địa chỉ</label>
                                </div>
                                <div class="form-group form-focus">
                                    @Html.TextBoxFor(model => model.Phone, new { @class = "form-control floating" })
                                    @Html.ValidationMessageFor(model => model.Phone)
                                    <label class="focus-label">SĐT</label>
                                </div>
                                <div class="form-group form-focus">
                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control floating" })
                                    @Html.ValidationMessageFor(model => model.Email)
                                    <label class="focus-label">Email</label>
                                </div>
                                <div class="form-group form-focus">
                                    @Html.TextBoxFor(model => model.BirthDay, new { @class = "form-control datetimepicker" })
                                    @Html.ValidationMessageFor(model => model.BirthDay)
                                    <label class="focus-label">Ngày sinh</label>
                                </div>
                                <div class="login-or">
                                    <span class="or-line"></span>
                                    <span class="span-or" style=" background-color: #fff; display: block; left: 35%; margin-left: -20px; position: absolute; text-align: center; top: -1px;">thông tin tài khoản</span>
                                </div>
                                <div class="form-group form-focus">
                                    @Html.TextBoxFor(model => model.Account, new { @class = "form-control floating" })
                                    @Html.ValidationMessageFor(model => model.Account)
                                    <label class="focus-label">Tên đăng nhập</label>
                                </div>
                                <div class="form-group form-focus">
                                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control floating", @type = "password" })
                                    @Html.ValidationMessageFor(model => model.Password)
                                    <label class="focus-label">Mật khẩu</label>
                                </div>
                                <button class="btn btn-primary btn-block btn-lg login-btn" type="submit">Cập nhật</button>
                            }
                           
                            <!-- /Register Form -->

                        </div>
                    </div>
                </div>
                <!-- /Register Content -->

            </div>
        </div>

    </div>

</div>

