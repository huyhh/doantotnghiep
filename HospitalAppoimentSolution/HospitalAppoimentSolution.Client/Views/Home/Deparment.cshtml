@model IEnumerable<HospitalAppoimentSolution.Data.ViewModels.DepartmentActionView>
    @using HospitalAppoimentSolution.Helper.Core
<section class="section section-specialities">
    <div class="container-fluid">
        <div class="section-header text-center">
            <h2>Khoa</h2>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-9">
                <!-- Slider -->
                <div class="specialities-slider slider">
                    @{ int i = 1;}
                    @if (Model != null && Model.Count() > 0)
                    {
                        <!-- Slider Item -->
                        foreach (var item in Model)
                        {
                            var url = $"/phong-ban/{item.Title.ToUrlFormat(true, true)}-{item.ID}.html";
                            var image = $"/Content/img/specialities/specialities-{@i}.png";
                            <div class="speicality-item text-center">
                                <a href="@url">
                                    <div class="speicality-img">
                                        <img src="@image" class="img-fluid" alt="Speciality">
                                        <span><i class="fa fa-circle" aria-hidden="true"></i></span>
                                    </div>
                                    <p>@item.Title</p>
                                </a>
                            </div>
                            i++;
                            if (i == 6)
                            {
                                i = 0;
                            }
                        }
                        <!-- /Slider Item -->
                    }
                </div>
                <!-- /Slider -->

            </div>
        </div>
    </div>
</section>