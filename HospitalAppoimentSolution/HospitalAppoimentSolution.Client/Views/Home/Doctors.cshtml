@model IEnumerable<HospitalAppoimentSolution.Data.ViewModels.DoctorView>
@using HospitalAppoimentSolution.Helper.Core
    <section class="section section-doctor">
        <div class="container-fluid">
            <div class="row">
                
                <div class="col-lg-12">
                    <div class="doctor-slider slider">

                        <!-- Doctor Widget -->
                        @if (Model != null && Model.Count() > 0)
                                    {
                                        foreach (var item in Model)
                                        {
                                            var url = $"/bac-si/{item.Name.ToUrlFormat(true, true)}-{item.ID}.html";
                                <div class="profile-widget">
                                    <div class="doc-img">
                                        <a href="@url">
                                            <img class="img-fluid" alt="User Image" src="@item.Avatar">
                                        </a>
                                        <a href="@url" class="fav-btn">
                                            <i class="far fa-bookmark"></i>
                                        </a>
                                    </div>
                                    <div class="pro-content">
                                        <h3 class="title">
                                            <a href="@url">@item.Name</a>
                                            <i class="fas fa-check-circle verified"></i>
                                        </h3>
                                        <p class="speciality">@item.DepartmentName</p>
                                        <div class="rating">
                                            <i class="fas fa-star filled"></i>
                                            <i class="fas fa-star filled"></i>
                                            <i class="fas fa-star filled"></i>
                                            <i class="fas fa-star filled"></i>
                                            <i class="fas fa-star filled"></i>
                                            <span class="d-inline-block average-rating">(@RandomUtils.RandomInt(3,999))</span>
                                        </div>
                                        <ul class="available-info">
                                            <li>
                                                <i class="fas fa-map-marker-alt"></i> @item.Address
                                            </li>
                                            <li>
                                                <i class="far fa-clock"></i> @item.Phone
                                            </li>
                                            <li>
                                                <i class="far fa-money-bill-alt"></i> @String.Format("{0:0,00}",item.Price)
                                                <i class="fas fa-info-circle" data-toggle="tooltip" title="Lorem Ipsum"></i>
                                            </li>
                                        </ul>
                                        <div class="row row-sm">
                                            <div class="col-6">
                                                <a href="@url" class="btn view-btn">Xem hồ sơ</a>
                                            </div>
                                            <div class="col-6">
                                                <a href="@url" class="btn book-btn">Đặt hẹn</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        <!-- /Doctor Widget -->

                    </div>
                </div>
            </div>
        </div>
    </section>