@model HospitalAppoimentSolution.Data.ViewModels.PromotionView
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="content">
        <div class="container">

            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="blog-view">
                        @if (Model != null && Model.ID != 0)
                        {
                        <div class="blog blog-single-post">
                            <div class="blog-image">
                                <a href="javascript:void(0);"><img alt="" src="@Model.Avatar" class="img-fluid"></a>
                            </div>
                            <h3 class="blog-title">@Model.Title</h3>
                            <ul class="entry-meta meta-item">

                                <li><i class="far fa-clock"></i> @String.Format("{0:dd/MM/yyyy}", Model.StartDate) -  @String.Format("{0:dd/MM/yyyy}", Model.EndDate)</li>
                                <li style=" text-transform: uppercase; color: #6f37ec; font-weight: 600; letter-spacing: 1px;"><i class="far fa-file-code"></i> @Model.Code</li>
                            </ul>
                            <div class="blog-content">
                                <p>@Html.Raw(Model.Content)</p>
                            </div>
                        </div>

                        }
                        <div class="card blog-share clearfix">
                            <div class="card-header">
                                <h4 class="card-title">Share the post</h4>
                            </div>
                            <div class="card-body">
                                <ul class="social-share">
                                    <li><a href="#" title="Facebook"><i class="fab fa-facebook"></i></a></li>
                                    <li><a href="#" title="Twitter"><i class="fab fa-twitter"></i></a></li>
                                    <li><a href="#" title="Linkedin"><i class="fab fa-linkedin"></i></a></li>
                                    <li><a href="#" title="Google Plus"><i class="fab fa-google-plus"></i></a></li>
                                    <li><a href="#" title="Youtube"><i class="fab fa-youtube"></i></a></li>
                                </ul>
                            </div>
                        </div>


                    </div>
                </div>

                <!-- Blog Sidebar -->
                <!-- /Blog Sidebar -->

            </div>
        </div>

    </div>

